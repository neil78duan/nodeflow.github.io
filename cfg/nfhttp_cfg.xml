<?xml  version="1.0" encoding="utf-8" ?>
<root name="configRoot" desc="root">
	<program_setting name="http program running setting">
		<logfile>../log/nfhttp.log</logfile>
		<logfilesize>104857600</logfilesize>
		<logFileNoDate desc="log  without date">1</logFileNoDate>
		<callstack>../log/nfhttp_call.call</callstack>
		<outputdump kinds="bool">0</outputdump>
		<inet_ip desc="internet ip address">192.168.1.100</inet_ip>
		<listen name="net socket listen info" >
			<port name="socket port" not_use_base="1">8080</port>
			<is_ipv6 name="is ipv6?">0</is_ipv6>
			<connected_tmout name="timeout" desc="close untill data coming">3600</connected_tmout>
			<bindip desc="bind ip"/>
			<listen_mod desc="lieten-tcp, listen-ext, listen-udt" kinds="hide" delete="no">listen-tcp</listen_mod>
			<max_connect>1024</max_connect>
			<listen_thread_number desc="numbers of thread in pool 0 determined by cpus">1</listen_thread_number>
			<empty_connected_timeout desc="close accept before data in">300</empty_connected_timeout>
			<closed_unknown_msg desc="closed the cliets when received unknow message, 0 nothing, 1 close ">1</closed_unknown_msg>
			<closed_unauthorize_msg desc="closed the cliets when received unauthorize message, 0 nothing, 1 close ">1</closed_unauthorize_msg>
		</listen>		
		<reliable_host desc="from these host is reliable">
			<host1>%.%.%.%</host1>
		</reliable_host>
	</program_setting>
	
	<path_setting name="working path and file">
		<home_path />
		<download_path></download_path>
		<upload_path></upload_path>
		<main_script desc="script file">httpUpdate_script.bin</main_script>
	</path_setting>	
</root>